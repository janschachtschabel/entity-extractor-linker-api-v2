# OpenAI Configuration (Required)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_TIMEOUT=120
# Optional: Custom OpenAI API base URL (e.g. for Azure/OpenAI-compatible endpoints)
OPENAI_BASE_URL=

# Wikipedia API Configuration
WIKIPEDIA_TIMEOUT=30
WIKIPEDIA_MAX_CONCURRENCY=5
WIKIPEDIA_BATCH_SIZE=10

# Wikidata API Configuration  
WIKIDATA_TIMEOUT=30
WIKIDATA_MAX_CONCURRENCY=5
WIKIDATA_BATCH_SIZE=10

# Cache & Performance
CACHE_DIR=./cache
TEXT_SPLIT_THRESHOLD=4000
TEXT_CHUNK_SIZE=800

# Rate Limiting
RATE_LIMIT=100
RATE_WINDOW=60

# Logging
LOG_LEVEL=INFO

# Development Settings
DEBUG=false
RELOAD=false
